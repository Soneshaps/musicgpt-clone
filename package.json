{
  "name": "musicgpt-clone",
  "version": "1.0.0",
  "description": "MusicGPT Clone - NextJS + NestJS Monorepo",
  "private": true,
  "workspaces": [
    "backend"
  ],
  "scripts": {
    "prepare": "husky",
    "backend:dev": "cd backend && npm run start:dev",
    "backend:build": "cd backend && npm run build",
    "backend:lint": "cd backend && npm run lint:check",
    "backend:lint:fix": "cd backend && npm run lint:fix",
    "backend:format": "cd backend && npm run format",
    "backend:format:check": "cd backend && npm run format:check"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5"
  },
  "lint-staged": {
    "backend/**/*.{ts,js}": [
      "cd backend && eslint --fix",
      "cd backend && prettier --write"
    ],
    "backend/**/*.{json,md,yml,yaml}": [
      "cd backend && prettier --write"
    ]
  }
}
